<div class="text-center">
  <h2>{{name}}</h2>
  <br></br>
  <p>{{description}}</p>
  <p>Created by <b>{{user.username}}</b> on {{format_date date_created}}</p>
  <p>

  <div>

    {{#if posts.length}}
      <div class="col-md-6 topic-post">
        <h3>Comments:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4>"{{post.description}}{{post.date_created}}</h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
    {{/if}}

  </div>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">post:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
       <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </p>
</div>
